[flake8]
max-line-length = 100
exclude = .git,__pycache__,build,dist,.venv
extend-ignore = E203  # Ignore whitespace before ':' (conflicts with black)
max-complexity = 10
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py: F401
    # Allow long lines in test files
    test_*.py: E501